           </columns>
       </TableView>
   
       <TextField fx:id="txtNombre" layoutX="182.0" layoutY="370.0" promptText="Nombre" />
       <TextField fx:id="txtEdad" layoutX="342.0" layoutY="370.0" promptText="Edad" />
       <TextField fx:id="txtArea" layoutX="504.0" layoutY="370.0" promptText="Especialidad" />
   
       <Button fx:id="btnAgregarDoctor" layoutX="50" layoutY="420" onAction="#agregarDoctor" text="Agregar Doctor" />
       <Button fx:id="btnEliminarDoctor" layoutX="250" layoutY="420" onAction="#eliminarDoctor" text="Eliminar Doctor" />
       <Button fx:id="btnActualizarDoctor" layoutX="450" layoutY="420" onAction="#actualizarDoctor" text="Actualizar Doctor" />
       <Button fx:id="btnVolver" layoutX="600" layoutY="420" onAction="#volverAlMenu" text="Volver" />
